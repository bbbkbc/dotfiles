general {
        colors = true
        interval = 5
}

order += "volume master"
order += "tztime date"
order += "tztime time"

volume master {
        format = " %volume "
        format_muted = " %volume "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

