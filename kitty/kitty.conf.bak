# Theme Configuration
include current-theme.conf
text_composition_strategy platform
# text_fg_override_threshold 4.5

# Font Configuration
font_family      JetBrains Mono Nerd Font
bold_font        auto
italic_font      auto
normal_font	 auto
bold_italic_font auto
# force_ltr no
font_size 10.0
change_font_size all +0.25
# modify_font_size all 0.2

map ctrl+equal change_font_size all +0.25
map ctrl+minus change_font_size all -0.25
map ctrl+backspace change_font_size all 0

# Window Appearance
# window_margin_width -1
# single_window_margin_width -1
# window_padding_width -1
# single_window_padding_width -1
draw_minimal_borders yes
hide_window_decorations yes


